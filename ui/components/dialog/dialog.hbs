{{#if hasClose}}
  <a class="kui-dialog-close"></a>
{{/if}}
{{#if title}}
  <div class="kui-dialog-title">
    {{title}}
  </div>
{{/if}}
<div class="kui-dialog-content">

</div>

{{#if footer}}
  <div class="kui-dialog-footer">
    {{#if confirmText}}
      <button class="kui-dialog-confirm btn btn-blue btn-large">{{confirmText}}</button>
    {{/if}}
    {{#if cancelText}}
      <button class="kui-dialog-cancel btn btn-default btn-large">{{cancelText}}</button>
    {{/if}}
  </div>
{{/if}}
